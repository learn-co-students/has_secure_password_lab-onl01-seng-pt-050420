<%= form_for(@user) do |f| %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %>
  <%= f.label :password, "Password" %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, "Confirm Password" %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.sumbit "Submit" %>
<% end %>